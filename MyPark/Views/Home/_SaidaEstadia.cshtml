@model MyPark.Model.DataBase.Models.estadia

<div id="dlgSaidaEstadia" role="dialog" class="modal fade">

    @using (Ajax.BeginForm("SairEstadia", "Home", new AjaxOptions()
    {
        HttpMethod = "Post",
        OnSuccess = "fecharNovaSaida",
        OnFailure = "falharNovaSaida",
        LoadingElementId = "loadAjax",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "telaSaida"
    }))
    {
        @Html.AntiForgeryToken()

        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Saída</h4>
                </div>

                <div class="modal-body">

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        @Html.Hidden("info", false)

                        <div class="form-group">
                            @Html.Label("Placa", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.Editor("Placa", new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Veiculo.Placa, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer form-horizontal">
                    <button type="button" class="btn btn-primary" data-dismiss="modal"> Cancelar </button>
                    <input type="submit" value="Salvar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

